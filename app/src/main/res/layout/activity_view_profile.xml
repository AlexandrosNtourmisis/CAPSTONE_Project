<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.ViewProfile"
    android:background="@drawable/gradient_color_background">

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/white"
        android:id="@+id/idcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/imageLogo"
                android:layout_width="90dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_height="90dp"
                android:src="@mipmap/logocircle"/>

        <TextView
            android:id="@+id/profileFname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageLogo"
            android:text="@string/author"
            android:textColor="@color/colorPrimary"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/profileLname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/author"
            android:textColor="@color/colorPrimary"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/profileFname"
             />


            <androidx.cardview.widget.CardView
                android:id="@+id/EditProfile"
                android:layout_width="140dp"
                android:layout_height="37dp"
                android:layout_marginTop="15dp"
                android:elevation="10dp"
                android:onClick="EditProf"
                app:cardElevation="7dp"
                app:cardCornerRadius="8dp"
                android:layout_marginStart="200dp"
                android:clickable="true"
               >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/edit_profile_button"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="11sp"
                    android:gravity="center"

                    />
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/ChangePassword"
                android:layout_width="140dp"
                android:layout_height="37dp"
                android:layout_marginTop="10dp"
                android:elevation="10dp"
                android:onClick="ChangePass"
                android:layout_below="@+id/EditProfile"
                app:cardElevation="7dp"
                app:cardCornerRadius="8dp"
                android:layout_marginStart="200dp"
                android:clickable="true"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/change_pass_button"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="11sp"
                    android:gravity="center"

                    />
            </androidx.cardview.widget.CardView>



