            <androidx.cardview.widget.CardView
                android:id="@+id/ChangeLocationSettings"
                android:layout_width="140dp"
                android:layout_height="37dp"
                android:layout_marginTop="10dp"
                android:elevation="10dp"
                android:onClick="ChangeLocationSet"
                android:layout_below="@+id/ChangePassword"
                app:cardElevation="7dp"
                app:cardCornerRadius="8dp"
                android:layout_marginStart="200dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/change_loc_set_button"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="11sp"
                    android:gravity="center"

                    />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/logout"
                android:layout_width="140dp"
                android:layout_height="37dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:elevation="10dp"
                android:onClick="Logout"
                android:layout_below="@+id/ChangeLocationSettings"
                app:cardElevation="7dp"
                app:cardCornerRadius="8dp"
                android:layout_marginStart="200dp"
                android:backgroundTint="@color/colorPrimaryDark"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/log_out_button"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:gravity="center"

                    />
            </androidx.cardview.widget.CardView>

