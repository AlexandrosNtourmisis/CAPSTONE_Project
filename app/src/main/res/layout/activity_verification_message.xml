<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_color_background"
    android:paddingTop="105dp"
    tools:context=".register.VerificationMessage">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:cardCornerRadius="12dp"
        app:cardElevation="20dp">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

    <TextView
        android:id="@+id/verificationMessageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="35dp"
        android:text="@string/verificationSuccessTitle"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40sp"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/VerifiedIcon"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="20dp"
android:layout_marginTop="10dp"
        android:background="@drawable/ic_baseline_verified_24"
        android:layout_marginBottom="85dp"/>
        </LinearLayout>

    <TextView
        android:id="@+id/verificationMessageSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:text="@string/verificationSuccessMessage"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/verificationMessageTitle"/>


    <Button
        android:id="@+id/VerifiedLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button_light"
        android:clickable="true"

        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:text="@string/login"
        android:textColor="@color/white"
        android:layout_marginBottom="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/verificationMessageSubtitle"


        />
    </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>